<odoo>
    <!-- List view for attachments -->
    <record id="view_compliance_attachment_list" model="ir.ui.view">
        <field name="name">compliance.attachment.list</field>
        <field name="model">ir.attachment</field>
        <field name="arch" type="xml">
            <list string="Compliance Documents">
                <field name="name"/>
                <field name="mimetype"/>
                <field name="create_uid" string="Uploaded By"/>
                <field name="create_date" string="Uploaded On"/>
            </list>
        </field>
    </record>

    <!-- Inherit Product form -->
    <record id="view_product_form_inherit_env_compliance" model="ir.ui.view">
        <field name="name">product.template.form.env.compliance</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook" position="inside">
                <page string="Environmental Compliance">
                    <group>
                        <field name="compliance_rohs"/>
                        <field name="compliance_reach"/>
                        <field name="compliance_prop65"/>
                    </group>

                    <group string="Compliance Documents">
                        <field name="compliance_attachment_ids" widget="many2many_tags"/>
                    </group>

                    <group>
                        <button name="action_view_compliance_docs" 
                            string="View/Download Documents" 
                            type="object" 
                            icon="fa-download"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
