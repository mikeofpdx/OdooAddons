<record id="purchase_order_form_inherit_totals" model="ir.ui.view">
    <field name="name">purchase.order.form.inherit.totals</field>
    <field name="model">purchase.order</field>
    <field name="inherit_id" ref="purchase.purchase_order_form"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='tax_totals']" position="before">
            <field name="amount_tariff" widget="monetary" options="{'currency_field': 'currency_id'}"/>
        </xpath>
    </field>
</record>