<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_template_form_tariff" model="ir.ui.view">
        <field name="name">product.template.form.inherit.tariff</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='barcode']" position="after">
                <field name="hs_tariff_code"/>
                <field name="tariff_rate" widget="float"/>
            </xpath>
        </field>
    </record>

    <record id="purchase_order_form_inherit_tariff" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.tariff</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/list/field[@name='price_unit']" position="after">
                <field name="tariff_rate" optional="show"/>
            </xpath>
            <xpath expr="//field[@name='tax_totals']" position="before">
                <field name="amount_tariff" widget="monetary" options="{'currency_field': 'currency_id'}"/>
            </xpath>
        </field>
    </record>
</odoo>