<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_purchaseorder_document_tariff" inherit_id="purchase.report_purchaseorder_document">
        
        <xpath expr="//table//thead//tr//th[1]" position="after">
            <th class="text-end"><strong>Tariff %</strong></th>
        </xpath>
        
        <xpath expr="//table//tbody//tr//td[1]" position="after">
            <td class="text-end">
                <span t-field="line.tariff_rate"/>%
            </td>
        </xpath>

        <xpath expr="//div[hasclass('page')]" position="inside">
            <div class="row justify-content-end" name="tariff_summary_row">
                <div class="col-4">
                    <table class="table table-sm">
                        <tr class="border-black">
                            <td><strong>Total Tariff Charges</strong></td>
                            <td class="text-end">
                                <span t-field="o.amount_tariff" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </xpath>
        
    </template>
</odoo>