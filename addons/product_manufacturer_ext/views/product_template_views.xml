<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_search_view_mfr" model="ir.ui.view">
        <field name="name">product.template.search.mfr.extension</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="filter_domain">[
                    '|', '|', 
                    ('name', 'ilike', self), 
                    ('default_code', 'ilike', self), 
                    ('manufacturer_pref', 'ilike', self)
                ]</attribute>
            </xpath>

            <xpath expr="//field[@name='name']" position="after">
                <field name="manufacturer_pref" string="Manufacturer Code"/>
                <field name="manufacturer_id" string="Manufacturer" operator="child_of"/>
            </xpath>
        </field>
    </record>
</odoo>