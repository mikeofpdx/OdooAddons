<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Inherit Product Template Form -->
    <record id="product_template_form_engineering" model="ir.ui.view">
        <field name="name">product.template.form.engineering</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">

            <!-- Rename External Reference -->
            <xpath expr="//field[@name='default_code']" position="attributes">
                <attribute name="string">PLM Part Number</attribute>
            </xpath>

            <!-- Engineering Tab -->
            <xpath expr="//page[@name='general_information']" position="after">
                <page string="Engineering" name="engineering_tab">

                    <group>
                        <group string="PLM">
                            <field name="default_code" readonly="1"/>
                            <field name="lifecycle"/>
                            <field name="library_owner"/>
                            <field name="eco_reference"/>
                        </group>

                        <group string="ECAD Mapping">
                            <field name="ecad_library_id"/>
                            <field name="ecad_device"/>
                            <field name="ecad_package"/>
                            <field name="footprint_rev"/>
                        </group>
                    </group>

                    <group string="Electrical Characteristics">
                        <field name="value"/>
                        <field name="tolerance"/>
                        <field name="power_rating"/>
                        <field name="voltage_rating"/>
                        <field name="part_type"/>
                    </group>

                    <group string="Notes">
                        <group>
                            <field name="engineering_notes" colspan="4"/>
                        </group>
                        <group>
                            <field name="ecad_library_notes" colspan="4"/>
                        </group>
                    </group>

                </page>
            </xpath>

        </field>
    </record>

</odoo>
