<odoo>
    <record id="action_assign_engineering_attributes" model="ir.actions.server">
        <field name="name">Assign Engineering Attributes</field>

        <!-- MUST be product.template -->
        <field name="model_id" ref="product.model_product_template"/>
        <field name="binding_model_id" ref="product.model_product_template"/>

        <!-- MUST be list -->
        <field name="binding_view_types">list</field>

        <field name="state">code</field>
        <field name="code">
action = env['engineering.attribute.wizard'].with_context(
    active_ids=records.ids,
    active_model='product.template'
).action_open()
        </field>
    </record>
</odoo>
