<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- ECAD Library Action -->
    <record id="action_ecad_library" model="ir.actions.act_window">
        <field name="name">ECAD Libraries</field>
        <field name="res_model">engineering.ecad.library</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu Root -->
    <menuitem
        id="menu_engineering_root"
        name="Engineering"
        sequence="10"
    />

    <menuitem
        id="menu_ecad_root"
        name="ECAD"
        parent="menu_engineering_root"
        sequence="10"
    />

    <menuitem
        id="menu_ecad_libraries"
        name="Libraries"
        parent="menu_ecad_root"
        action="action_ecad_library"
        sequence="10"
    />

    <!-- ECAD Library Tree View -->
    <record id="view_ecad_library_tree" model="ir.ui.view">
        <field name="name">ecad.library.tree</field>
        <field name="model">engineering.ecad.library</field>
        <field name="arch" type="xml">
            <tree string="ECAD Libraries">
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <!-- ECAD Library Form View -->
    <record id="view_ecad_library_form" model="ir.ui.view">
        <field name="name">ecad.library.form</field>
        <field name="model">engineering.ecad.library</field>
        <field name="arch" type="xml">
            <form string="ECAD Library">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page string="Assigned Parts">
                            <field name="product_ids" context="{'default_ecad_library_id': active_id}">
                                <tree string="Products in this Library" editable="false" create="false" delete="false">
                                    <field name="name"/>
                                    <field name="default_code" string="PLM Part Number"/>
                                    <field name="part_type"/>
                                    <field name="voltage_rating"/>
                                    <field name="power_rating"/>
                                    <field name="engineering_notes"/>
                                </tree>
                                <form>
                                    <!-- optional: open product form when clicked -->
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View for Assigned Parts -->
    <record id="view_product_ecad_library_search" model="ir.ui.view">
        <field name="name">product.ecad.library.search</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <search string="Filter Parts">
                <field name="ecad_library_id" invisible="1"/>
                <filter name="filter_part_type" string="Part Type" domain="[]" context="{}"/>
                <filter name="filter_voltage" string="Voltage Rating" domain="[]" context="{}"/>
                <filter name="filter_power" string="Power Rating" domain="[]" context="{}"/>
            </search>
        </field>
    </record>
</odoo>
