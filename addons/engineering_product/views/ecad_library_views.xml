<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Tree View for ECAD Library -->
    <record id="view_ecad_library_tree" model="ir.ui.view">
        <field name="name">ecad.library.tree</field>
        <field name="model">engineering.ecad.library</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <!-- Form View for ECAD Library -->
    <record id="view_ecad_library_form" model="ir.ui.view">
        <field name="name">ecad.library.form</field>
        <field name="model">engineering.ecad.library</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for ECAD Libraries -->
    <record id="action_ecad_library" model="ir.actions.act_window">
        <field name="name">ECAD Libraries</field>
        <field name="res_model">engineering.ecad.library</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[
            (5, 0, 0),
            (0, 0, {'view_mode': 'tree','view_id': ref('view_ecad_library_tree')}),
            (0, 0, {'view_mode': 'form','view_id': ref('view_ecad_library_form')})
        ]"/>
    </record>

    <!-- Menu Root -->
    <menuitem
        id="menu_engineering_root"
        name="Engineering"
        sequence="10"
    />

    <!-- ECAD Submenu -->
    <menuitem
        id="menu_ecad_root"
        name="ECAD"
        parent="menu_engineering_root"
        sequence="10"
    />

    <!-- ECAD Libraries Menu -->
    <menuitem
        id="menu_ecad_libraries"
        name="Libraries"
        parent="menu_ecad_root"
        action="action_ecad_library"
        sequence="10"
    />

</odoo>
