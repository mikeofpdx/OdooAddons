<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="view_product_datasheet_tree" model="ir.ui.view">
        <field name="name">product.datasheet.tree</field>
        <field name="model">product.datasheet</field>
        <field name="arch" type="xml">
            <list string="Datasheets">
                <field name="name"/>
                <field name="manufacturer"/>
                <field name="part_number"/>
                <field name="revision"/>
                <field name="product_count"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_product_datasheet_form" model="ir.ui.view">
        <field name="name">product.datasheet.form</field>
        <field name="model">product.datasheet</field>
        <field name="arch" type="xml">
            <form string="Datasheet">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_products" 
                                type="object"
                                class="oe_stat_button" 
                                icon="fa-cubes">
                            <field name="product_count" widget="statinfo" string="Products"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="manufacturer"/>
                            <field name="part_number"/>
                        </group>
                        <group>
                            <field name="revision"/>
                            <field name="date_issued"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page string="File">
                            <group>
                                <field name="datasheet_file" filename="datasheet_filename"/>
                                <field name="datasheet_filename" invisible="1"/>
                                <field name="url" widget="url"/>
                            </group>
                        </page>
                        <page string="Products">
                            <field name="product_ids">
                                <list>
                                    <field name="default_code"/>
                                    <field name="name"/>
                                    <field name="categ_id"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_product_datasheet_search" model="ir.ui.view">
        <field name="name">product.datasheet.search</field>
        <field name="model">product.datasheet</field>
        <field name="arch" type="xml">
            <search string="Search Datasheets">
                <field name="name"/>
                <field name="manufacturer"/>
                <field name="part_number"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Manufacturer" name="manufacturer" context="{'group_by': 'manufacturer'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_product_datasheet" model="ir.actions.act_window">
        <field name="name">Datasheets</field>
        <field name="res_model">product.datasheet</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first datasheet
            </p>
            <p>
                Upload datasheets that can be shared across multiple products.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_product_datasheet"
              name="Datasheets"
              parent="stock.menu_stock_root"
              action="action_product_datasheet"
              sequence="50"/>
</odoo>
