<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Product Form -->
    <record id="view_product_template_form_inherit_datasheet" model="ir.ui.view">
        <field name="name">product.template.form.inherit.datasheet</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_datasheets" 
                        type="object"
                        class="oe_stat_button" 
                        icon="fa-file-pdf-o"
                        invisible="datasheet_count == 0">
                    <field name="datasheet_count" widget="statinfo" string="Datasheets"/>
                </button>
            </xpath>
            
            <xpath expr="//page[@name='general_information']" position="after">
                <page string="Datasheets" name="datasheets">
                    <field name="datasheet_ids">
                        <tree>
                            <field name="name"/>
                            <field name="manufacturer"/>
                            <field name="part_number"/>
                            <field name="revision"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>